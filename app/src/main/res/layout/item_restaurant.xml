<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- com.example.personalrestaurantguide.Restaurant Image -->
        <ImageView
            android:id="@+id/restaurant_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_image"
            android:contentDescription="Restaurant Image" />

        <!-- com.example.personalrestaurantguide.Restaurant Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- com.example.personalrestaurantguide.Restaurant Name -->
            <TextView
                android:id="@+id/restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant Name"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/primaryTextColor" />

            <!-- com.example.personalrestaurantguide.Restaurant Address -->
            <TextView
                android:id="@+id/restaurant_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/secondaryTextColor"
                android:layout_marginTop="4dp" />

            <!-- com.example.personalrestaurantguide.Restaurant Tags -->
            <TextView
                android:id="@+id/restaurant_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tags: Vegan, Italian"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_italic"
                android:textColor="@color/secondaryTextColor"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
